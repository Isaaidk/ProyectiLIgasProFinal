@model IEnumerable<WebApplication2.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Jugadores </h1>

<table class=" table table-hover table-bordered ">
    <thead>
        <tr>
            <th>
              
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.posicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) { 

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.posicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                </td>
                <td>

                    <a asp-action="Edit" type=" button" class="btn btn-secondary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" type=" button" class="btn btn-info" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" type=" button" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" type=" button" class="btn btn-success">Crear Nuevo Jugador </a>
</p>
<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-primary" href="http://localhost:5204/" type="button">Inicio</a>

</div>