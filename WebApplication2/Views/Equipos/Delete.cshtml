@model WebApplication2.Models.Equipo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Desea eliminar este equipo?</h3>
<div>
    <h4>Equipo</h4>
    <hr />

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Ciudad</th>
                <th scope="col">Titulos</th>
                <th scope="col">Extrangeros</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    @Html.DisplayFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayFor(model => model.Ciudad)

                </th>
                <th>
                    @Html.DisplayFor(model => model.Titulos)


                </th>

                <th>
                    @Html.DisplayFor(model => model.Extranjeros)
                </th>

            </tr>
        </tbody>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" type="button" class="btn btn-primary">Regresar</a>
    </form>
</div>
